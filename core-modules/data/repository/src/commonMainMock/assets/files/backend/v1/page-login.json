{
  "root": {
    "id": "page-login",
    "setting": {
      "navigation": {
        "definition": {
          "transition": "fade"
        }
      }
    },
    "subset": "layout-linear",
    "style": {
      "orientation": "vertical",
      "background-color": {
        "id": "*background:gray-light"
      },
      "fill-max-size": true
    },
    "content": {
      "items": [
        "*item-spacer",
        {
          "subset": "label",
          "style": "*title-section",
          "content": {
            "value": "Please enter your credentials"
          }
        },
        "*item-spacer-24-v",
        {
          "id": "input-field-login",
          "subset": "form-field",
          "option": {
            "form-validator": "string-not-null"
          },
          "content": {
            "title": "Login",
            "placeholder": "login",
            "message-error": "can not be null"
          }
        },
        {
          "id": "input-field-password",
          "subset": "form-field",
          "option": {
            "form-validator": "string-not-null"
          },
          "content": {
            "title": "Password",
            "placeholder": "password",
            "message-error": "can not be null"
          }
        },
        "*item-spacer",
        {
          "subset": "layout-linear",
          "style": {
            "orientation": "horizontal",
            "background-color": "*background:funny-color",
            "fill-max-width": true
          },
          "content": {
            "items": [
              "*item-spacer",
              {
                "subset": "button",
                "content": {
                  "label": {
                    "style": "*label-main-button-default",
                    "content": {
                      "value": "Connection"
                    }
                  },
                  "action": "navigate://url/page-home"
                }
              },
              "*item-spacer"
            ]
          }
        }
      ]
    }
  },
  "components": [
    {
      "id": "item-spacer",
      "subset": "spacer",
      "style": {
        "weight": "1.0"
      }
    },
    {
      "id": "item-spacer-24-v",
      "subset": "spacer",
      "style": {
        "height": "*padding:spacer-24"
      }
    }
  ],
  "styles": [
    {
      "id": "title-section",
      "font-size": "18",
      "font-color": "*red"
    },
    {
      "id": "label-main-button-default",
      "font-size": { "id": "*font:button" },
      "font-color": "*blue"
    }

  ],
  "colors": {
    "common": {
      "red": "#FFFF0000",
      "blue": "#FF0000FF"
    },
    "background": {
      "gray-light": "#FFD9D9D9",
      "funny-color": "#FF66D9FF"
    }
  },
  "dimensions": {
    "font": {
      "button": "16"
    },
    "padding": {
      "spacer-24": "48"
    }
  }
}
