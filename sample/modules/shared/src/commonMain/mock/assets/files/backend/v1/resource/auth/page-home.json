{
  "setting": {
    "time-to-live": {
      "strategy": "single-use"
    }
  },
  "root": {
    "setting": {
      "shadower": {
        "navigate-forward": {
          "wait-done-to-render": false,
          "enable": true
        },
        "contextual": {
          "url": {
            "component": "${url-origin}-contextual-components"
          }
        }
      },
      "navigation": {
        "definitions": {
          "option": {
            "clear-stack": true,
            "single": true,
            "reuse": "last"
          },
          "transition": "fade"
        }
      }
    },
    "subset": "layout-linear",
    "style": {
      "orientation": "vertical",
      "background-color": "*background@gray-light",
      "fill-max-size": true
    },
    "content": {
      "items": [
        {
          "id": "top-bar-layout",
          "subset": "layout-linear",
          "style": {
            "orientation": "horizontal",
            "background-color": "*background@blue-sky",
            "fill-max-width": true
          },
          "content": {
            "items": [
              "*spacer@very-small",
              "*image@small-logo",
              "*spacer@full",
              "*button@help",
              "*spacer@very-small",
              "*button@logout",
              "*spacer@very-small"
            ]
          }
        },
        {
          "id": "top-bar-layout",
          "subset": "layout-linear",
          "style": {
            "orientation": "horizontal",
            "background-color": "*background@blue-sky",
            "fill-max-width": true
          },
          "content": {
            "items": [
              "*spacer@very-small",
              "*label@home-title"
            ]
          }
        },
        "*spacer@full",
        {
          "id": "input-field-layout",
          "subset": "layout-linear",
          "style": {
            "orientation": "horizontal",
            "fill-max-width": true
          },
          "content": {
            "items": [
              "*spacer@small",
              {
                "id": {
                  "value": "input-field-email",
                  "source": "*fields@input-email"
                }
              },
              "*spacer@small"
            ]
          }
        },
        {
          "id": "input-field-layout",
          "subset": "layout-linear",
          "style": {
            "orientation": "horizontal",
            "fill-max-width": true
          },
          "content": {
            "items": [
              "*spacer@small",
              {
                "id": {
                  "value": "input-field-age",
                  "source": "*fields@input-age"
                }
              },
              "*spacer@small"
            ]
          }
        },
        "*spacer@full",
        {
          "id": "button-layout",
          "subset": "layout-linear",
          "style": {
            "orientation": "horizontal",
            "background-color": "*background@blue-sky",
            "fill-max-width": true
          },
          "content": {
            "items": [
              "*spacer@very-small",
              "*button@send",
              "*spacer@full",
              "*button@next",
              "*spacer@very-small"
            ]
          }
        }
      ]
    }
  },
  "components": {
    "image": {
      "small-logo": {
        "id": "*image@small",
        "subset": "image",
        "content": {
          "values": "*top-bar@small-logo",
          "description": "small-Logo"
        }
      }
    },
    "label": {
      "home-title": {
        "id": "*label@title",
        "subset": "label",
        "content": {
          "value": "*page-home@title"
        }
      },
      "home-message": {
        "id": "*label@section",
        "subset": "label",
        "content": {
          "value": "*page-home@body"
        }
      },
      "send-form-button": {
        "id": "*label@button",
        "subset": "label",
        "content": {
          "value": "*page-home@send-form-button"
        }
      },
      "help-button": {
        "id": "*label@button",
        "subset": "label",
        "content": {
          "value": "*page-home@help-button"
        }
      },
      "next-button": {
        "id": "*label@button",
        "subset": "label",
        "content": {
          "value": "*next-button"
        }
      },
      "logout-button": {
        "id": "*label@button",
        "subset": "label",
        "content": {
          "value": "*page-home@logout-button"
        }
      }
    },
    "button": {
      "send": {
        "subset": "button",
        "content": {
          "label": "*label@send-form-button",
          "action": "*send"
        }
      },
      "help": {
        "subset": "button",
        "content": {
          "label": "*label@help-button",
          "action": "*help"
        }
      },
      "next": {
        "subset": "button",
        "content": {
          "label": "*label@next-button",
          "action": "*next"
        }
      },
      "logout": {
        "subset": "button",
        "content": {
          "label": "*label@logout-button",
          "action": "*logout"
        }
      }
    },
    "fields": {
      "input-email": {
        "subset": "form-field",
        "option": {
          "form-validators": "string-not-null"
        },
        "content": {
          "title": "*page-home@form-email",
          "placeholder": "*page-home@form-email-placeholder",
          "message-errors": "can not be null"
        }
      },
      "input-age": {
        "subset": "form-field",
        "option": {
          "form-validators": "string-not-null"
        },
        "content": {
          "title": "*page-home@form-age",
          "placeholder": "*page-home@form-age-placeholder",
          "message-errors": "can not be null"
        }
      }
    }
  }
}
